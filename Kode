<script>
const pages = ['elemen','finding','schedule','history','tinjauan','overview'];
const tabMap = {
  'elemen':   'tab-elemen',
  'finding':  'tab-finding',
  'schedule': 'tab-schedule',
  'history':  'tab-history',
  'tinjauan': 'tab-tinjauan',
  'overview': null,
};
const addBtnLabel = {
  'elemen':   '+ Update Compliance',
  'finding':  '+ New Finding',
  'schedule': '+ New Jadwal Audit',
  'history':  '+ New Audit',
  'tinjauan': '+ New Tinjauan',
  'overview': '+ New Audit',
};

function showPage(name) {
  pages.forEach(p => {
    document.getElementById('page-' + p).classList.remove('active');
    const tid = tabMap[p];
    if (tid) document.getElementById(tid).classList.remove('active');
  });
  document.getElementById('page-' + name).classList.add('active');
  const tid = tabMap[name];
  if (tid) document.getElementById(tid).classList.add('active');
  document.getElementById('add-btn').textContent = addBtnLabel[name] || '+ New';
}

function showElDetail(num) {
  // Highlight clicked card briefly
  const cards = document.querySelectorAll('.elemen-card');
  cards.forEach(c => c.style.boxShadow = '');
  if (cards[num-1]) cards[num-1].style.boxShadow = '0 0 0 2px var(--audit)';
  setTimeout(() => { if(cards[num-1]) cards[num-1].style.boxShadow = ''; }, 1200);
}

showPage('elemen');
</script>

</body>
</html>
